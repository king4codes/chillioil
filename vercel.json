{
    "version": 2,
    "builds": [
        {
            "src": "**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/styles.css",
            "headers": { "cache-control": "public, max-age=31536000, immutable" },
            "continue": true
        },
        {
            "src": "/script.js",
            "headers": { "cache-control": "public, max-age=31536000, immutable" },
            "continue": true
        },
        {
            "src": "/(.*)\\.png",
            "headers": { "cache-control": "public, max-age=31536000, immutable" },
            "continue": true
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
} 